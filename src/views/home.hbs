                            </div>
                            <h2>${{this.fund}}</h2>
                            <hr />
                            <h3>{{this.name}}</h3>
                            <img class="userimg" src="images/user.png" />
                            <a href="profile/{{this.userid}}">{{this.ownername}}</a>
                            <br />
                            <img class="locationimg" src="images/location.png" />
                            <span>{{this.location}}</span>
                        </div>
                    {{/each}}
                </div>
            </section>
        </main>
        <footer style="text-align:center;padding-top:20px;color:#00BFFF">
            <h1 style="font-weight:500">AFAL&reg;</h1>
        </footer>
    </div>


    
</body>