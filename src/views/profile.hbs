{{#each response}}

<div class="container">
<div class = "left">

<div class="image"> <img class="imgprofile"src="{{this.img}}" alt="personalImage"/> </div>

<div class = "social">
    <a class = "link" href="{{this.email}}"><img src="/images/email.png" alt="email pic"/></a>
    <a class = "link" href="{{this.linkedin}}"><img src="/images/linkedin.png" alt="linkedin pic"/></a>
    <a class = "link" href="{{this.mobile}}"><img src="/images/whatsapp.png" alt="whatsup pic"/></a>
    <a class = "link" href="{{this.facebook}}"><img src="/images/facebook.png" alt="fb pic"/></a>   
</div>
</div>

<div class="details">
    <h2 class="name">{{this.name}}</h2>
    <div class="info">
    <h3 class="line">Location:</h3><h3>{{this.location}}</h3>
    <h3 class="line">Occupation:</h3><h3>{{this.occupation}}</h3>
    <h3 class="line">Member Since:</h3><h3>{{transfer this.reg_date}}</h3>
    <h3 class="line">Specification:</h3><h3>{{this.spec}}</h3>
</div>
    <div class="about">
     <h2 class="name">About Me:</h2>
     <h3>{{this.description}}</h3>
     </div>
</div>
    
</div>

{{/each}}